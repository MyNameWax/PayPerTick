<idea-plugin>
    <id>icu.spider007</id>

    <name>PayPerTick</name>

    <vendor email="waxjava04@163.com" url="https://github.com/MyNameWax">Wax</vendor>

    <description><![CDATA[
        PayPerTick <br>
        <a href="https://github.com/MyNameWax/PayPerTick">GitHub</a><br>

        <br>
        Features<br>

        <br>
        <em>1.Entry, see Tools->PayPerTick</em><br>
        <em>2.More warm tips, more accurate calculations</em><br>

        <br>
        <em>1.工具入口 Tools->PayPerTick</em><br>
        <em>2.更温馨的提示,更准确的计算</em><br>

        <br>
        How to use<br>

        <br>
        <em>1.Open PayPerTick</em><br>
        <em>2.Fill Info</em><br>
        <em>3.Enjoy it</em><br>

        <br>
        more information, you can see <a href="https://github.com/MyNameWax/PayPerTick">https://github.com/MyNameWax/PayPerTick</a>
    ]]></description>



    <idea-version since-build="223" until-build="252.*" />

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="PayPerTick"
                    anchor="bottom"
                    factoryClass="icu.spider007.SalaryCalculatorToolWindowFactory"

                   />
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="icu.spider007.config.SalaryCalculatorConfig"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <statusBarWidgetProvider implementation="icu.spider007.EarningsStatusWidget$Provider"/>
    </extensions>
    <actions>
        <action id="SalaryCalculatorAction" class="icu.spider007.SalaryCalculatorAction"
                text="Open PayPerTick" description="Click Me Open PayPerTick">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>


</idea-plugin>
